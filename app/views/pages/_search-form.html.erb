<%= form_tag(pills_path, method: "get") do %>
  <div class="flexbox">
    <%= text_field_tag :search, params[:search], placeholder: "Pick an address...", class: "navbar-wagon-search-input", id: "search_place" %>
    <%= button_tag(type: "submit", class: "btn btn-primary btn-lg") do %>
      <i class="glyphicon glyphicon-search" style="color: #00CC7E"></i>
    <% end %>
  </div>
<% end %>
