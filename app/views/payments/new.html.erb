
<%= form_tag carts_path do %>
  <article>
    <label class="amount">
      <span><%= humanized_money_with_symbol(@current_cart.price_cents) %></span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
    data-name="Mon Panier"
    data-email="<%= current_user.email %>"
    data-description="<%= @current_cart.delivery_location %>"
    data-amount="<%= @current_cart.price_cents %>"
    data-currency="<%= %>"></script>

<% end %>
