<div class="wrapper">
  <div class="container">
    <div class="row">
      <% @pills.each do |pill| %>
      <div class="col-xs-12 col-sm-6 col-md-4" >
        <div class="card">
          <div class="card-picture">
            <div class="frame-picture">
                <%= image_tag pill.photo %>
            </div>
          </div>
          <div class="card-lab">
            <div class="avatar-bordered">
              <%= pill.brandphoto %>
            </div>
            <p class="underlined"> <%= pill.brand %> </p>
          </div>
          <div class="card-description">
            <h2> <%= pill.name %></h2>
            <p> <%= pill.description  %> </p>
          </div>
          <div class="card-order">
            <div class="capacity">
              <p><%= pill.capacity %>
              <!-- ajouter le bouton panier -->
            </div>
            <div class="price">
              <p><%= pill.price.to_s.gsub(".",",") %> â‚¬ </p>
            </div>
          </div>
        </div>
      </div>
        <% end %>
    </div>
  </div>
</div>
