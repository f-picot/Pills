<div class="order-banner">
  <div class="map-text">
    <p><%= @address %></p>
    <p>|</p>
    <p>14:00</p>
  </div>
</div>

<div class="wrapper">
  <div class="customcontainer">
    <div class="row">
      <% @pills.each do |pill| %>
      <div class="col-xs-12 col-sm-6 col-md-4" >
        <div class="card">
          <div class="card-picture">
            <div class="frame-picture">
                <%= image_tag pill.photo %>
            </div>
          </div>
          <div class="card-lab">
            <%= image_tag(pill.brandphoto, class: "avatar-bordered") %>
            <p class="underlined"> <%= pill.brand %> </p>
          </div>
          <div class="card-description">
            <h2> <%= pill.name %></h2>
            <p> <%= pill.description  %> </p>
          </div>
          <div class="card-order">
            <div class="capacity">
              <p><%= pill.capacity %>
              <!-- ajouter le bouton panier -->
            </div>
            <div class="price">
              <p><%= pill.price %> € </p>
            </div>
          </div>
        </div>
      </div>
        <% end %>
    </div>
  </div>
</div>

<% if @cart.cart_items.any? %>
  <h2>Vos Pills <%= @cart.cart_items.count %></h2>
  <!-- afficher @cart.delivery_location -->
  <!-- afficher @cart.delivery_time -->
  <ul>
    <% @cart.cart_items.each do |cart_item| %>
      <li><%= cart_item.quantity %> -
          <%= cart_item.pill.name %> :
          <%= cart_item.pill.price * cart_item.quantity %> euros</li>
    <% end %>
  </ul>
  <p>Total : <%= @cart.total %> euros</p>
<% else %>
  <h2>Votre panier est vide</h2>
  <p>Ajoutez des produits à votre commande</p>
<% end %>

<h1>Add pills to cart</h1>
<ul>
  <% @pills.each do |pill| %>
    <li><%= pill.name %></li>
    <div class="cart-control">
      <% if @cart.cart_items.where(pill_id: pill.id).first %>
        <%= simple_form_for [pill, @cart.cart_items.where(pill_id: pill.id).first], method: :patch do |f| %>
          <%= f.hidden_field :cart_id, value: @cart.id %>
          <%= f.submit "-", class: "btn btn-primary" %>
        <% end %>
      <% end %>
      <%= simple_form_for [pill, @cart_item] do |f| %>
        <%= f.hidden_field :cart_id, value: @cart.id %>
        <%= f.submit "+", class: "btn btn-primary" %>
      <% end %>
    </div>
  <% end %>
</ul>
