<div class="order-banner">
  <div class="map-text">
    <p><%= @address %></p>
    <p>|</p>
    <p>14:00</p>
  </div>
</div>

<div>
    <%= simple_form_for(:pill, url: pills_path, method: :get, remote: true) do |k| %>
    <div id="search-bar-form" class="flexbox">
      <%= k.input :name, label: false, placeholder: "Search a medoc", class: "navbar-wagon-search-input", id: "search_name" %>
      <%= k.button :submit, class: "btn btn-primary ", id: "home_button", value:"" %>
        <i class="glyphicon glyphicon-search"></i>
    </div>
  <% end %>
</div>


<div class="wrapper">
  <div class="customcontainer">
    <div class="row">
      <div id="pill-card">
        <%= render partial: 'cards', collection: @pills, as: :pill %>
      </div>
    </div>
  </div>
</div>

<% if @cart.cart_items.any? %>
  <h2>Vos Pills <%= @cart.cart_items.count %></h2>
  <!-- afficher @cart.delivery_location -->
  <!-- afficher @cart.delivery_time -->
  <ul>
    <% @cart.cart_items.each do |cart_item| %>
      <li><%= cart_item.quantity %> -
          <%= cart_item.pill.name %> :
          <%= cart_item.pill.price * cart_item.quantity %> euros</li>
    <% end %>
  </ul>
  <p>Total : <%= @cart.total %> euros</p>
<% else %>
