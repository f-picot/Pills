<div class="cart-recap">
  <div class="cart-content-header">
    <p>Mes informations de livraison</p>
  </div>
  <button type="button" data-dismiss="modal" class="btn btn-dismiss" data-toggle="modal" data-target="#mycart"><i class="fa fa-times"></i></button>
</div>
<div class="cart-infos">
  <div class="cart-content">
    <div class="blue-icon-two"><i class="fa fa-clock-o"></i></div>
    <p>Livraison prévue à <strong><%= @cart.delivery_time.strftime('%Hh%M') %></strong></p>
  </div>
</div>
<div class="cart-infos">
  <div class="cart-content">
    <div class="blue-icon-two"><i class="fa fa-map-marker"></i></div>
    <p><strong><%= @cart.delivery_location %></strong></p>
  </div>
</div>

<div class="cart-change">
  <div class="total underlined">
    <p>Modifier l'heure de livraison</p>
  </div>
</div>

<div class="whiter">
  <div class="pickers-wrapper">
    <div class="timepicker">
      <%= simple_form_for @cart do |f| %>
        <!-- <div class="form-group"> -->
          <!-- <div class='input-group date' id='datetimepicker3'> -->
          <div class="container">
            <div class="row">
              <div class="col-sm-6 timer">
                <%= f.input :delivery_time, label: false, as: :string, input_html: {class: "date placer", id:"datetimepicker3" } %>
              </div>
              <div class="col-sm-6">
                <div class="flexible text-center">
                <%= f.submit class: "btn btn-primary timer-two", value: 'Valider', "data-disable-with" => "Valider" %>
                </div>
              </div>
            </div>
          </div>
            <!-- <input type='text' class="form-control" /> -->
          <!-- </div> -->
        <!-- </div> -->
      <% end %>
    </div>
  </div>
</div>
<div class="cart-change">
  <div class="total underlined">
    <p>Modifier le lieu de livraison</p>
  </div>
</div>
<div class="whiter-two">
  <div class="pickers-wrapper-two">
    <div class="search-modal">
      <%= form_tag(pills_path, method: "get") do %>
        <div class="container">
          <div class="row">
            <div class="col-sm-12">
              <div class="flexbox-demo-modal">
                <%= text_field_tag :search, params[:search], placeholder: "Entrez votre adresse de livraison...", class: "search placer", id: "search_place" %>
                <%= button_tag(type: "submit", class: "submit placer-two", id: "home_button") do %>
                  <i class="glyphicon glyphicon-map-marker glyph-size"></i>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
